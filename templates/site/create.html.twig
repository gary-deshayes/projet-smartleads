{% extends 'base.html.twig' %}

{% form_theme formContact 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1>Ajout d'un contact</h1>

    {{ form_start(formContact) }}

   {{ form_row(formContact.code_customer, {'attr': {'placeholder' : "A378X792"},'label': "Code client"}) }}
   {{ form_row(formContact.first_name, {'attr': {'placeholder' : "DUPONT"}, 'label' : "Nom du client"}) }}
   {{ form_row(formContact.mobile_phone, {'attr': {'placeholder' : "01 44 44 44 44"}, 'label' : "Téléphone mobile"}) }}

    <button type="submit" class="btn btn-success"> Ajouter un contact</button>

    {{ form_end(formContact) }}

{% endblock %}