{% extends 'base.html.twig' %}

{% block title %}Settings index
{% endblock %}

{% block body %}
    <h1>Paramètres de l'application</h1>
    <div class="window">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a aria-controls="home" aria-selected="true" class="nav-link active" data-toggle="tab" href="#app" id="identite-tab" role="tab">Identité</a>
            </li>
            <li class="nav-item">
                <a aria-controls="notes" aria-selected="false" class="nav-link" data-toggle="tab" href="#notes" id="settings-contacts-tab" role="tab">Contacts</a>
            </li>
        </ul>

        <div class="tab-content" id="myTabContent">
            <div aria-labelledby="identite-tab" class="tab-pane fade show active" id="app" role="tabpanel">
                {{ include('settings/_form.html.twig', {'button_label': 'Enregistrer'}) }}
            </div>
            <div aria-labelledby="settings-contacts-tab" class="tab-pane fade" id="notes" role="tabpanel">
                <h1>Contacts</h1>
                <select class="form-control" id="settings-contacts">
                    <option value="1">Métier</option>
                    <option value="2">Pouvoir décisionnel</option>
                </select>
                <div id="partProfession">
                    {{ include('profession/settings_view.html.twig', {'button_label': 'Enregistrer'}) }}
                </div>
                <div id="partDecisionMaking">
                    {{ include('decision_making/settings_view.html.twig', {'button_label': 'Enregistrer'}) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
