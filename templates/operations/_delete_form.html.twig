<form method="post" action="{{ path('operations_delete', {'name': operation.name}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ operation.name) }}">
    <button class="btn">Delete</button>
</form>
