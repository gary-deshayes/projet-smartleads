{% extends 'base_operation.html.twig' %}

{% block title %}Grand jeu -
    {{operation.name}}
{% endblock %}

{% block body %}
    <h1>Bonjour,
        {{ contact.lastName ~ " " ~ contact.firstName }}!</h1>
    <h2>Participez au jeu concours '{{operation.name}}' dans l'espoir de gagner un Bitcoin !</h2>
    <div class="form-style">
        {{ form_start(formContact) }}
        <div class="window">
            <div class="col-lg-5 form-style operation-template-div-principale">
                <h2>Infos personnelles</h2>
                {% if formulaire_options.contacts_gender >= 1 %}
                    <div class="row">


                        {{ form_label(formContact.gender)}}

                        {% if formulaire_options.contacts_gender == 1 %}

                            {{ form_widget(formContact.gender, { "attr" : { "class" : "form-control col-lg-12", "disabled": "disabled"}})}}

                        {% elseif formulaire_options.contacts_gender == 2 %}

                            {{ form_widget(formContact.gender, { "attr" : { "class" : "form-control col-lg-12"}})}}

                        {% elseif formulaire_options.contacts_gender == 3 %}

                            {{ form_widget(formContact.gender, { "attr" : { "class" : "form-control col-lg-12", "required": "required"}})}}

                        {% endif %}

                        {{ form_errors(formContact.gender) }}


                    </div>
                {% endif %}
                {% if formulaire_options.contacts_firstname >= 1 %}
                    <div class="row">


                        {{ form_label(formContact.firstName)}}

                        {% if formulaire_options.contacts_firstname == 1 %}

                            {{ form_widget(formContact.firstName, { "attr" : { "class" : "form-control col-lg-12", "disabled": "disabled"}})}}

                        {% elseif formulaire_options.contacts_firstname == 2 %}

                            {{ form_widget(formContact.firstName, { "attr" : { "class" : "form-control col-lg-12"}})}}

                        {% elseif formulaire_options.contacts_firstname == 3 %}

                            {{ form_widget(formContact.firstName, { "attr" : { "class" : "form-control col-lg-12", "required": "required"}})}}

                        {% endif %}

                        {{ form_errors(formContact.firstName) }}


                    </div>
                {% endif %}
                {% if formulaire_options.contacts_lastname >= 1 %}
                    <div class="row">

                        {{ form_label(formContact.lastName)}}

                        {% if formulaire_options.contacts_lastname == 1 %}

                            {{ form_widget(formContact.lastName, { "attr" : { "class" : "form-control col-lg-12", "disabled": "disabled"}})}}

                        {% elseif formulaire_options.contacts_lastname == 2 %}

                            {{ form_widget(formContact.lastName, { "attr" : { "class" : "form-control col-lg-12"}})}}

                        {% elseif formulaire_options.contacts_lastname == 3 %}

                            {{ form_widget(formContact.lastName, { "attr" : { "class" : "form-control col-lg-12", "required": "required"}})}}

                        {% endif %}

                        {{ form_errors(formContact.lastName) }}


                    </div>
                {% endif %}

                {% if formulaire_options.contacts_birthdate >= 1 %}
                    <div class="row">

                        {{ form_label(formContact.birthDate)}}

                        {% if formulaire_options.contacts_birthdate == 1 %}

                            {{ form_widget(formContact.birthDate, { "attr" : { "class" : "datepicker form-control col-lg-12", "disabled": "disabled"}})}}

                        {% elseif formulaire_options.contacts_birthdate == 2 %}

                            {{ form_widget(formContact.birthDate, { "attr" : { "class" : "datepicker form-control col-lg-12"}})}}

                        {% elseif formulaire_options.contacts_birthdate == 3 %}

                            {{ form_widget(formContact.birthDate, { "attr" : { "class" : "datepicker form-control col-lg-12", "required": "required"}})}}

                        {% endif %}

                        {{ form_errors(formContact.birthDate) }}


                    </div>
                {% endif %}

                <div class="row">

                    {{ form_label(formContact.linkedin)}}

                    {{ form_widget(formContact.linkedin, { "attr" : { "class" : "form-control col-lg-4"}})}}

                    {{ form_errors(formContact.linkedin) }}


                    {{ form_label(formContact.phone)}}

                    {{ form_widget(formContact.phone, { "attr" : { "class" : "form-control col-lg-4"}})}}

                    {{ form_errors(formContact.phone) }}

                </div>
                <div class="row">

                    {{ form_label(formContact.facebook)}}

                    {{ form_widget(formContact.facebook, { "attr" : { "class" : "form-control col-lg-4"}})}}

                    {{ form_errors(formContact.facebook) }}


                    {{ form_label(formContact.standardPhone)}}

                    {{ form_widget(formContact.standardPhone, { "attr" : { "class" : "form-control col-lg-4"}})}}

                    {{ form_errors(formContact.standardPhone) }}

                </div>
                <div class="row">

                    {{ form_label(formContact.twitter)}}

                    {{ form_widget(formContact.twitter, { "attr" : { "class" : "form-control col-lg-12"}})}}

                    {{ form_errors(formContact.twitter) }}

                </div>
            </div>
            <div class="col-lg-5 form-style operation-template-div-principale">
                <div class="row">


                    {{ form_label(formContact.workName)}}

                    {{ form_widget(formContact.workName, { "attr" : { "class" : "form-control col-lg-12", "disabled": "disabled"}})}}

                    {{ form_errors(formContact.workName) }}

                </div>
                <div class="row">

                    {{ form_label(formContact.birthDate)}}

                    {{ form_widget(formContact.birthDate, { "id":"", "attr" : { "class" : "datepicker form-control col-lg-6"}})
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            }}
                    {{ form_errors(formContact.birthDate) }}


                </div>
                <div class="row">

                    {{ form_label(formContact.mobilePhone)}}

                    {{ form_widget(formContact.mobilePhone, { "attr" : { "class" : "form-control col-lg-12"}})}}

                    {{ form_errors(formContact.mobilePhone) }}

                </div>

                <div class="row">

                    {{ form_label(formContact.linkedin)}}

                    {{ form_widget(formContact.linkedin, { "attr" : { "class" : "form-control col-lg-4"}})}}

                    {{ form_errors(formContact.linkedin) }}


                    {{ form_label(formContact.phone)}}

                    {{ form_widget(formContact.phone, { "attr" : { "class" : "form-control col-lg-4"}})}}

                    {{ form_errors(formContact.phone) }}

                </div>
                <div class="row">

                    {{ form_label(formContact.facebook)}}

                    {{ form_widget(formContact.facebook, { "attr" : { "class" : "form-control col-lg-4"}})}}

                    {{ form_errors(formContact.facebook) }}


                    {{ form_label(formContact.standardPhone)}}

                    {{ form_widget(formContact.standardPhone, { "attr" : { "class" : "form-control col-lg-4"}})}}

                    {{ form_errors(formContact.standardPhone) }}

                </div>
                <div class="row">

                    {{ form_label(formContact.twitter)}}

                    {{ form_widget(formContact.twitter, { "attr" : { "class" : "form-control col-lg-12"}})}}

                    {{ form_errors(formContact.twitter) }}

                </div>
                <input class="btn btn-primary" type="submit" value="Envoyer"/>
            </div>
        </div>
        {{ form_end(formContact) }}
    </div>
{% endblock %}
