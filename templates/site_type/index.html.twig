    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site_type in site_types %}
            <tr>
                <td>{{ site_type.id }}</td>
                <td>{{ site_type.libelle }}</td>
                <td>
