{% block javascripts %}
    <script type="text/javascript"/>
    switch('{{period}}'){
        case 'day':
            $("#pills-today-tab").addClass("active");
        break;
        case 'week':
            $("#pills-week-tab").addClass("active");
        break;
        case 'month':
            $("#pills-month-tab").addClass("active");
        break;
        case 'year':
            $("#pills-year-tab").addClass("active");
        break;
    }
</script>
{% endblock %}
